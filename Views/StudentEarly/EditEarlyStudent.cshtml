                                    <div class="col-md-9">
                                        <input type="text" required class="form-control" id="FatherAndMotherDiseases" name="FatherAndMotherDiseases" value="@Model.StudentFamilyInfo.FatherAndMotherDiseases">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="userName">هل يوجد بين أقرباء والديه أفراد معاقين</label>
                                    <div class="col-md-9">
                                        <select class="form-control">
                                            @if (string.IsNullOrWhiteSpace(Model.StudentFamilyInfo.DisabilityOfRelative))
                                            {
                                                <option>نعم</option>
                                                <option selected>لا</option>
                                            }
                                            else
                                            {
                                                <option selected>نعم</option>
                                                <option>لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="DisabilityOfRelative">ماهي الإعاقة</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="DisabilityOfRelative" name="DisabilityOfRelative" value="@Model.StudentFamilyInfo.DisabilityOfRelative">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="RelationshipWithDisabled">ماهي صلة القرابة</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="RelationshipWithDisabled" name="RelationshipWithDisabled" value="@Model.StudentFamilyInfo.RelationshipWithDisabled">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="BrotherAndSisterCount">ماهو عدد أخوة الطفل</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="BrotherAndSisterCount" name="BrotherAndSisterCount" value="@Model.StudentFamilyInfo.BrotherAndSisterCount">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="ChildOrder">ترتيب الطفل في الأسرة</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="ChildOrder" name="ChildOrder" value="@Model.StudentFamilyInfo.ChildOrder">
                                    </div>
                                </div>
                                <div style="padding-top:20px">
                                    <button type="submit" class="btn btn-primary">تعديل</button>
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                </form>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mb-3"> معلومات الأشقاء الغير متزوجين</h4>
                <div method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">

                                <table class="table table-centered mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>البند</th>
                                            <th>الاسم</th>
                                            <th>الجنس</th>
                                            <th>العمر</th>
                                            <th>المستوى التعليمي</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tr>
                                        <form method="post" action="~/AddNewStudentSibling">
                                            <td>
                                            <input type="number" id="order" name="order" class="form-control" />
                                            <input type="hidden" name="studentId" value="@Model.Id" />
                                            </td>
                                            <td>
                                            <input type="text" id="name" name="name" class="form-control" />
                                            </td>
                                            <td>
                                            <select class="form-control" id="isMale" name="isMale">
                                                    <option value="True">ذكر</option>
                                                    <option value="False">أنثى</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input type="number" class="form-control" id="age" name="age" />
                                            </td>
                                            <td>
                                            <input type="text" class="form-control" id="level" name="level" />
                                            </td>
                                            <td>
                                                <button type="submit">إضافة</button>
                                            </td>
                                        </form>
                                    </tr>
                                    <tbody id="tblData">
                                        @foreach (var item in Model.StudentSiblings)
                                        {
                                            <tr>
                                                <td>@item.Order</td>
                                                <td>@item.FullName</td>
                                                @if (item.IsMale)
                                                {
                                                    <td>ذكر</td>
                                                }
                                                else
                                                {
                                                    <td>أنثى</td>
                                                }
                                                <td>
                                                    @(DateTime.Now.Year - item.BirthDate.Year)
                                                </td>
                                                <td>@item.StudyLevel</td>
                                                <td>
                                                    <a href="~/RemoveStudentSibling/@item.Id" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <div style="padding-top:20px">
                                    <button type="submit" class="btn btn-primary">تعديل</button>
                                </div>

                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mb-3"> التاريخ الطبي للأم</h4>
                <form action="~/EditStudentMotherMedical" method="post">
