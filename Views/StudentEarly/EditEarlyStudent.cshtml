                                    <div class="col-md-9">
                                        <input type="text" required class="form-control" id="MotherJob" name="MotherJob" value="@Model.StudentFamilyInfo.MotherJob">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="FatherName">اسم الأب</label>
                                    <div class="col-md-9">
                                        <input type="text" required class="form-control" id="FatherName" name="FatherName" value="@Model.StudentFamilyInfo.FatherName">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="FatherYear">عمر الأب</label>
