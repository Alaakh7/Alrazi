@using Alrazi.Tools
@model StudentPsychologyDevelopment
@{
    ViewData["Title"] = "إضافة النمو السيكولجي للطفل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="~/Panel">الرئيسية</a></li>
                    <li class="breadcrumb-item active">إضافة النمو السيكولجي للطفل</li>
                </ol>
            </div>
            <h4 class="page-title">إضافة النمو السيكولجي للطفل</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mb-3"> النمو السيكولجي للطفل</h4>
                <form method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    <label class=" col-form-label" for="OutputOperations">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("OutputOperations"))</label>
                                    <div class="col-md-9">
                                        <select class="form-control" name="OutputOperations">
                                            @if (Model.OutputOperations)
                                            {
                                                <option selected value="True">نعم</option>
                                                <option value="False">لا</option>
                                            }
                                            else
                                            {
                                                <option value="True">نعم</option>
                                                <option selected value="False">لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="SleepProblems">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("SleepProblems"))</label>
                                    <div class="col-md-9">
                                        <select class="form-control" name="SleepProblems">
                                            @if (Model.SleepProblems)
                                            {
                                                <option selected value="True">نعم</option>
                                                <option value="False">لا</option>
                                            }
                                            else
                                            {
                                                <option value="True">نعم</option>
                                                <option selected value="False">لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="HyperActivity">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("HyperActivity"))</label>
                                    <div class="col-md-9">
                                        <select class="form-control" name="HyperActivity">
                                            @if (Model.HyperActivity)
                                            {
                                                <option selected value="True">نعم</option>
                                                <option value="False">لا</option>
                                            }
                                            else
                                            {
                                                <option value="True">نعم</option>
                                                <option selected value="False">لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="Seizures">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("Seizures"))</label>
                                    <div class="col-md-9">
                                        <select class="form-control" name="Seizures">
                                            @if (Model.Seizures)
                                            {
                                                <option selected value="True">نعم</option>
                                                <option value="False">لا</option>
                                            }
                                            else
                                            {
                                                <option value="True">نعم</option>
                                                <option selected value="False">لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="LanguageProblems">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("LanguageProblems"))</label>
                                    <div class="col-md-9">
                                        <select class="form-control" name="LanguageProblems">
                                            @if (Model.LanguageProblems)
                                            {
                                                <option selected value="True">نعم</option>
                                                <option value="False">لا</option>
                                            }
                                            else
                                            {
                                                <option value="True">نعم</option>
                                                <option selected value="False">لا</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class=" col-form-label" for="OtherProblems">@(DataTypeExtention.GetDisplayName<StudentPsychologyDevelopment>("OtherProblems"))</label>
                                    <div class="col-md-9">
                                        <input type="text" required class="form-control" id="OtherProblems" name="OtherProblems" value="@Model.OtherProblems">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label class=" col-form-label" for="userName">هل هنالك مشاكل سلوكية</label>
                                    <div class="col-md-9">
                                        <div class="mt-3">
                                            @foreach (var item in ViewData["BehavioralProblems"] as List<BehavioralProblem>)
                                            {
                                                <div class="form-check">
                                                    @if (Model.StudentPsychologyDevelopmentBehavioralProblems.Any(x => x.BehavioralProblemId == item.Id))
                                                    {
                                                        <input type="checkbox" name="BehavioralProblems[]" checked value="@item.Id" class="form-check-input" id="@item.Id">
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" name="BehavioralProblems[]" value="@item.Id" class="form-check-input" id="@item.Id">
                                                    }
                                                    <label class="form-check-label" for="@item">@item.Name</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div style="padding-top:20px">
                                    <button type="submit" class="btn btn-primary">التالي</button>
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                </form>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>