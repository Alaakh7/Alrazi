                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-6">
                                        <label class=" col-form-label" for="MotherName">اسم الأم</label>
                                        <div class="col-md-9">
                                            <input type="text" required class="form-control" id="MotherName" name="MotherName" value="@Model.MotherName">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class=" col-form-label" for="MotherYear">عمر الأم</label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control" id="MotherYear" name="MotherYear" value="@Model.GetMotherYear">
                                        </div>
                                    </div>
