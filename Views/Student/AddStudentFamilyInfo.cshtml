                                            <input type="text" required class="form-control" id="MotherStudy" name="MotherStudy" value="@Model.MotherStudy">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class=" col-form-label" for="MotherJob">عمل الأم ومكانها</label>
                                        <div class="col-md-9">
                                            <input type="text" required class="form-control" id="MotherJob" name="MotherJob" value="@Model.MotherJob">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class=" col-form-label" for="FatherName">اسم الأب</label>
                                        <div class="col-md-9">
                                            <input type="text" required class="form-control" id="FatherName" name="FatherName" value="@Model.FatherName">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class=" col-form-label" for="FatherYear">عمر الأب</label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control" id="FatherYear" name="FatherYear" value="@Model.GetFatherYear">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class=" col-form-label" for="FatherStudy">المستوى التعليمي الأب</label>
                                        <div class="col-md-9">
                                            <input type="text" required class="form-control" id="FatherStudy" name="FatherStudy" value="@Model.FatherStudy">
